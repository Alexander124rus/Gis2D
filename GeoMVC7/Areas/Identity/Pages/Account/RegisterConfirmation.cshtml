@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Подтверждение регистрации";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!--app-content open-->
<div class="main-content app-content mt-0">
    <div class="side-app">
        <!-- CONTAINER -->
        <div class="main-container container-fluid">
            <!-- PAGE-HEADER -->
            <div class="page-header">
                <h1>@ViewData["Title"]</h1>
            </div>
            <!-- PAGE-HEADER END -->
            <!-- Row -->
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        <div class="col-md-6">
                            @{
                                if (@Model.DisplayConfirmAccountLink)
                                {
                                    <p>
                                        В настоящее время в этом приложении не зарегистрирован реальный отправитель электронной почты, смотрите <a href="https://aka.ms/aspaccountconf">эти документы</a> о том, как настроить реального отправителя электронной почты.
                                        Обычно это отправлялось по электронной почте: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Нажмите здесь, чтобы подтвердить свою учетную запись</a>
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        Пожалуйста, проверьте свою электронную почту, чтобы подтвердить свою учетную запись.
                                    </p>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Row -->
        </div>
        <!-- CONTAINER CLOSED -->
    </div>
</div>
<!--app-content closed-->



